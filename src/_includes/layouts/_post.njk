---
layout: "layouts/base.njk"
bodyClass: "article"
---
{% from '../social-icon.njk' import socialIcon %}

{# {% renderTemplate "webc" %}
<page-nav back-link="/micro" back-link-text="Back to all posts"></page-nav>
{% endrenderTemplate %} #}

<div class="layout-post container">
 <article class="post post--by-self">
        {# <div class="post__content">{{ content | safe }}</div> #}
        <footer class="post__footer">
            {# <time class="post__date">{{ date | humanReadableDateTime }}</time> #}
            <div class="post__links">
                {% if blueskyUrl %}
                <a href="{{ blueskyUrl }}">
                    {{ socialIcon({ icon: 'bluesky' }) }}
                    <span class="visually-hidden">View on Bluesky</span>
                </a>
                {% endif %}
                <a class="post__permalink" href="/micro/{{ date | toISOString | slugify }}">Permalink</a>
            </div>
        </footer>
    </article>
</div>
