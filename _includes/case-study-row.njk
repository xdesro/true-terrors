{% from './client-logo.njk' import clientLogo %}

<article class="case-study-row">
    <div class="case-study-row__inner">
        <div class="case-study-row__echoes" aria-hidden="true">
            <span class="case-study-row__echo">{{ caseStudy.data.title }}</span>
            <span class="case-study-row__echo">{{ caseStudy.data.title }}</span>
            <span class="case-study-row__echo">{{ caseStudy.data.title }}</span>
        </div>
        <h1 class="case-study-row__title">
            {{ clientLogo(title = caseStudy.data.title.toLowerCase(), class = 'case-study-row__logo') }}
            <div class="case-study-row__title-text">
                <span class="case-study-row__half">{{- caseStudy.data.title.slice(0, caseStudy.data.titleSplitIndex) -}}
                </span><span class="case-study-row__title-divider"></span><span class="case-study-row__half">
                    {{- caseStudy.data.title.slice(caseStudy.data.titleSplitIndex) -}}</span>
            </div>
        </h1>
        <div class="case-study-row__echoes case-study-row__echoes--after" aria-hidden="true">
            <span class="case-study-row__echo">{{ caseStudy.data.title }}</span>
            <span class="case-study-row__echo">{{ caseStudy.data.title }}</span>
            <span class="case-study-row__echo">{{ caseStudy.data.title }}</span>
            <span class="case-study-row__echo">{{ caseStudy.data.title }}</span>
            <span class="case-study-row__echo">{{ caseStudy.data.title }}</span>
        </div>
    </div>
    <a class="case-study-row__link" href="/work/{{ caseStudy.data.title | slugify }}">
        <span class="visually-hidden">Read the case study</span>
    </a>
</article>